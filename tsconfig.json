{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./built",
    "allowJs": true,
    "target": "es5",
    "esModuleInterop": true,
    "allowUnreachableCode": false,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "system",
    "moduleResolution": "Node",
    "jsx": "react",
    "typeRoots": ["src/typings"],
    "outFile": "./built/combined.js"
  },
  "include": ["./**/*"],
  "exclude": [
    "./plugins/**/*",
    "src/typings/**/*",
    "./built/**/*" // This is what fixed it!
  ]
}
